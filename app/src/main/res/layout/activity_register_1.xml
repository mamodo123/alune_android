<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alune_gray">

    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_logo_rounded" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/logo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="13"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_border"
            android:padding="6dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/ed_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="13"
            android:hint="Senha"
            android:inputType="textPassword"
            android:background="@drawable/edit_border"
            android:padding="6dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/ed_senha2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="13"
            android:hint="Repita a senha"
            android:inputType="textPassword"
            android:background="@drawable/edit_border"
            android:padding="6dp"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/bt_registrar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Quase lÃ¡!"
            android:background="@drawable/rounded_button_primary"
            android:textColor="#fff"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/ou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ou"
            android:layout_margin="20dp"
            android:textColor="@color/colorPrimary"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/bt_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

</RelativeLayout>